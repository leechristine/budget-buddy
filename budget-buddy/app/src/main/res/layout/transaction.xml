<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity">

    <EditText
        android:id="@+id/month_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="mm"
        android:inputType="textMultiLine"
        app:layout_constraintBaseline_toBaselineOf="@+id/day_field"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/day_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="dd"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/year_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="yyyy"
        android:inputType="textMultiLine"
        app:layout_constraintBaseline_toBaselineOf="@+id/day_field"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/cost_field"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Cost"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/day_field"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/category_options"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/cost_field"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/description_field"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Budgeting Goal"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/category_options"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>